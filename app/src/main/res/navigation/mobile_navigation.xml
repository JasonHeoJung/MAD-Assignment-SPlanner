<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="sg.edu.np.mad.splanner.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_timer"
        android:name="sg.edu.np.mad.splanner.ui.timer.MainTimerFragment"
        android:label="@string/title_timer"
        tools:layout="@layout/fragment_main_timer" />

    <fragment
        android:id="@+id/navigation_examtracker"
        android:name="sg.edu.np.mad.splanner.ui.examtracker.ExamtrackerFragment"
        android:label="@string/title_examtracker"
        tools:layout="@layout/fragment_examtracker" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="sg.edu.np.mad.splanner.ui.profile.ProfileFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_profile" />
